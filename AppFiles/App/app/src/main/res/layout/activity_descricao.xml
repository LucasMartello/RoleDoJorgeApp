<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DescricaoActivity">

    <TextView
        android:id="@+id/textView_titulo_Descricao"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:text="O que é Churras do Jorginho?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/textView_Descricao"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:text="O churras do Jorginho é um evento para convidados que acontecerá dia 30 de Outubro, na casa do Jorginho. Localizada na ruas dos Alfeneiros, número 4. Cada convidado deve confirmar presença pelo app e acompanhar os fóruns para saber o que deve levar ou quanto vai contribuir. Para mais informações, contatar diretamente o Jorginho pelo seu Whatsapp"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_titulo_Descricao"
        app:layout_constraintVertical_bias="0.110000014" />

    <Button
        android:id="@+id/button_Return"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:onClick="botaoReturnOnClick"
        android:text="Retornar"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Descricao" />

</androidx.constraintlayout.widget.ConstraintLayout>